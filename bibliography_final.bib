  file = {/Users/oscardimdore-miles/Zotero/storage/2LUDFN99/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/2MEY4X5A/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/5R6ARKVR/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/84GRY8W4/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/CFRG25AG/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/G6HM6DKJ/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/GY3KU5MI/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/URB5EVVI/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/URV549EU/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf;/Users/oscardimdore-miles/Zotero/storage/WIVBG4F7/Delworth et al. - 1993 - Interdecadal Variations of the Thermohaline Circul.pdf},
  journal = {Journal of Climate},
