@article{garfinkelWhy2012b,
  ids = {Garfinkel2012whymight,garfinkelWhy2012a},
  title = {Why Might Stratospheric Sudden Warmings Occur with Similar Frequency in {{El Ni\~no}} and {{La Ni\~na}} Winters?},
