  ids = {shawLife2013a},
  title = {The {{Life Cycle}} of {{Northern Hemisphere Downward Wave Coupling}} between the {{Stratosphere}} and {{Troposphere}}},
  author = {Shaw, Tiffany A. and Perlwitz, Judith},
