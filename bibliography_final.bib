  file = {/Users/oscardimdore-miles/Zotero/storage/7N76EAXE/Hamilton - 1998 - Effects of an Imposed Quasi-Biennial Oscillation i.pdf;/Users/oscardimdore-miles/Zotero/storage/QFTIUYBV/1520-0469_1998_055_2393_eoaiqb_2.0.co_2.html},
