  file = {/Users/oscardimdore-miles/Zotero/storage/6TVSXITZ/Delworth and Zeng - 2016 - The Impact of the North Atlantic Oscillation on Cl.pdf;/Users/oscardimdore-miles/Zotero/storage/83I9JAHW/Delworth and Zeng - 2016 - The Impact of the North Atlantic Oscillation on Cl.pdf;/Users/oscardimdore-miles/Zotero/storage/NZUARGAU/Delworth and Zeng - 2016 - The Impact of the North Atlantic Oscillation on Cl.pdf;/Users/oscardimdore-miles/Zotero/storage/WAYXF68M/Delworth and Zeng - 2016 - The Impact of the North Atlantic Oscillation on Cl.pdf},
  journal = {Journal of Climate},
