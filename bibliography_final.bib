@misc{Seidel2011,
  title = {Stratospheric Temperature Trends: {{Our}} Evolving Understanding},
  author = {Seidel, Dian J. and Gillett, Nathan P. and Lanzante, John R. and Shine, Keith P. and Thorne, Peter W.},
