  author = {McCarthy, G. and Frajka-Williams, E. and Johns, W. E. and Baringer, M. O. and Meinen, C. S. and Bryden, H. L. and Rayner, D. and Duchez, A. and Roberts, C. and Cunningham, S. A.},
