  file = {/Users/oscardimdore-miles/Zotero/storage/VQGPSMDS/Charlton and Polvani - 2007 - A New Look at Stratospheric Sudden Warmings. Part .pdf;/Users/oscardimdore-miles/Zotero/storage/MTB2YDQX/jcli3996.1.html},
