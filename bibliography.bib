  file = {/Users/oscardimdore-miles/Zotero/storage/XNNKP5H8/García‐Herrera et al. - 2006 - Propagation of ENSO temperature signals into the m.pdf;/Users/oscardimdore-miles/Zotero/storage/ZYAM73WN/2005JD006061.html},
