  copyright = {Copyright 2008 by the American Geophysical Union.},
  file = {/Users/oscardimdore-miles/Zotero/storage/G9DSHMRG/Garfinkel and Hartmann - 2008 - Different ENSO teleconnections and their effects o.pdf;/Users/oscardimdore-miles/Zotero/storage/QAT4X4IT/2008JD009920.html},
  journal = {Journal of Geophysical Research: Atmospheres},
  keywords = {ENSO,polar vortex,troposphere-stratsophere interactions},
  language = {en},
  number = {D18}
