  file = {/Users/oscardimdore-miles/Zotero/storage/IJSUCGMY/Delworth and Greatbatch - 2000 - Multidecadal Thermohaline Circulation Variability .pdf;/Users/oscardimdore-miles/Zotero/storage/IW3T9Y3Q/1520-0442_2000_013_1481_mtcvdb_2.0.co_2.html},
  journal = {Journal of Climate},
