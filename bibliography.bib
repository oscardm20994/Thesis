@article{bellStratospheric2009,
  title = {Stratospheric {{Communication}} of {{El Ni\~no Teleconnections}} to {{European Winter}}},
  author = {Bell, C. J. and Gray, L. J. and {Charlton-Perez}, A. J. and Joshi, M. M. and Scaife, A. A.},
