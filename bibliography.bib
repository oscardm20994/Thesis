  annotation = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2012JD017777},
  copyright = {\textcopyright 2012. American Geophysical Union. All Rights Reserved.},
  file = {/Users/oscardimdore-miles/Zotero/storage/3GXH3Z9U/Garfinkel et al. - 2012 - Why might stratospheric sudden warmings occur with.pdf;/Users/oscardimdore-miles/Zotero/storage/ZDTZZV4K/2012JD017777.html},
  journal = {Journal of Geophysical Research: Atmospheres},
  keywords = {ENSO,middle atmosphere,SSW,teleconnections},
  language = {en},
  number = {D19}
}

