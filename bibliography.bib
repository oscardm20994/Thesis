  file = {/Users/oscardimdore-miles/Zotero/storage/Q5FUG867/Tulloch and Marshall - 2012 - Exploring Mechanisms of Variability and Predictabi.pdf;/Users/oscardimdore-miles/Zotero/storage/D6C3HEEE/jcli-d-11-00460.1.html},
  journal = {Journal of Climate},
