  file = {/Users/oscardimdore-miles/Zotero/storage/GS4P72DI/Deser et al. - 2017 - The Northern Hemisphere Extratropical Atmospheric .pdf;/Users/oscardimdore-miles/Zotero/storage/8LD9U2UI/jcli-d-16-0844.1.html},
