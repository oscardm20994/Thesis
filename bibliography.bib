  copyright = {Copyright 2007 by the American Geophysical Union.},
  file = {/Users/oscardimdore-miles/Zotero/storage/578YV74A/Kuhlbrodt et al. - 2007 - On the driving processes of the Atlantic meridiona.pdf;/Users/oscardimdore-miles/Zotero/storage/LA8EF3E9/2004RG000166.html},
  journal = {Reviews of Geophysics},
  keywords = {diapycnal mixing,meridional overturning circulation,thermohaline circulation,wind-driven upwelling},
  language = {en},
  number = {2}
}

