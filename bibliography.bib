  file = {/Users/oscardimdore-miles/Zotero/storage/FVJ8TWCN/Frankignoul et al. - 2013 - The Influence of the AMOC Variability on the Atmos.pdf;/Users/oscardimdore-miles/Zotero/storage/MYIP7I3R/jcli-d-12-00862.1.html},
