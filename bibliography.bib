  file = {/Users/oscardimdore-miles/Zotero/storage/WKV6CR4I/Eden and Jung - 2001 - North Atlantic Interdecadal Variability Oceanic R.pdf;/Users/oscardimdore-miles/Zotero/storage/GKXMDRYI/1520-0442_2001_014_0676_naivor_2.0.co_2.html},
