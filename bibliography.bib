  file = {/Users/oscardimdore-miles/Zotero/storage/FKRU73FY/Esler and Scott - 2005 - Excitation of Transient Rossby Waves on the Strato.pdf;/Users/oscardimdore-miles/Zotero/storage/24X5YIR4/jas3557.1.html},
