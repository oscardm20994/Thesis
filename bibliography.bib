  file = {/Users/oscardimdore-miles/Zotero/storage/RA48NIXG/Iza et al. - 2016 - The Stratospheric Pathway of La Niña.pdf;/Users/oscardimdore-miles/Zotero/storage/2RBNUCJY/jcli-d-16-0230.1.html},
